                link.click();
                document.body.removeChild(link);

                // Show success toast
                showToast("successToast");
            } else {
                // Show error toast
                showToast("errorToast");
            }
        }

        function showToast(toastId) {
            const toast = document.getElementById(toastId);
            toast.classList.add("show");
            setTimeout(() => {
                toast.classList.remove("show");
            }, 3000);
        }
